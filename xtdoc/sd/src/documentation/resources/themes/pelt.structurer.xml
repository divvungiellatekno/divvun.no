<forrest:structurer xmlns:forrest="http://apache.org/forrest/templates/1.0" 
  xmlns:jx="http://apache.org/cocoon/templates/jx/1.0"
  jx:cache-key="#{$cocoon/parameters/getRequest}" 
  jx:cache-validity="${Packages.org.apache.excalibur.source.impl.validity.NOPValidity()}">
<!-- The following variables are used to contact data models and/or contracts. -->
  <jx:set var="contextPath" value="#{$cocoon/parameters/contextPath}"/>
  <jx:set var="getRequest" value="#{$cocoon/parameters/getRequest}"/>
  <jx:set var="getRequestExtension" value="#{$cocoon/parameters/getRequestExtension}" />
  <!-- FO View of the request (e.g. index.fo, usually further processed to pdf)-->
  <forrest:structure type="fo" hooksXpath="/">
    <jx:import uri="cocoon://prepare.panels.common-fo"/>
  </forrest:structure>
<!-- CSS View of the request e.g. index.dispatcher.css -->
  <forrest:structure type="css" hooksXpath="/">
    <jx:import uri="cocoon://prepare.panels.common-fo" />
  </forrest:structure>
  <!-- HTML View of the request (e.g. index.html)-->
  <forrest:structure type="html" hooksXpath="/html/body">
    <!-- 
        @type defines this structurer to html.
        @hooksXpath defines where all hooks will be injected (as prefix).
        -->
    <forrest:contract name="branding-css-links">
      <!-- More information around this contract
        http://marc.theaimsgroup.com/?l=forrest-dev&m=113473237805195&w=2
        -->
      <!--Note: The forrest:properties element does not exit anymore (in
      comparison to a previous versions) -->
      <forrest:property name="branding-css-links-input">
        <css url="common.css" media="screen" rel="alternate stylesheet" theme="common"/>
        <css url="leather-dev.css" media="screen" rel="alternate stylesheet" theme="common"/>
        <css url="pelt.screen.css" media="screen" theme="Pelt"/>
        <!-- You can request url specific css as defined above, 
          but beware that you need to use the *.dispatcher.css extension!!!-->
        <css prefix="" url="#{$getRequest}.dispatcher.css" media="screen" theme="Pelt"/>
        <css url="pelt.print.css" media="print"/>
        <css>/* Extra css */ 
p.quote {
 margin-left: 2em; 
 padding: .5em; 
 background-color: #f0f0f0; 
 font-family: "DejaVu Sans Mono", monospace; 
}
div.languages {
 margin-left: 200px;
 margin-right: 50px;
}

pre.code {
  border: 1pt solid #ddd ;
  padding: 2pt ;
  background: #efefef ;
}
div.abstract {
  border: 1pt dotted #ddd ;
  padding: 2pt ;
  background: #efefef ;
  font-size: 88%;
  margin-right: 10%;
  margin-left:  12pt;
  margin-bottom: 5pt;
}
div.abstract:before {
  display: block;
  text-align: left;
  content: "Abstract:";
  font-weight: bold;
  font-size: small;
}
.nonvalid, .broken {
  background-color: pink !important;
}
.correct {
  background-color: lightgreen;
}

.score {
  color: grey;
}

.forced, .forced td {
  background-color: yellow;
}

h1, h2, h3, h4, h5, h6 { font-family: "DejaVu Sans", Verdana, Arial, Helvetica,
sans-serif; }

p, li, dl, table { 
    font-family: "DejaVu Sans Condensed", Verdana, Helvetica, sans-serif;
}

dt {
  font-weight: bold;
}

.base-not-selected {
  background-color: #CFDCED;
}

.copyright {
  text-align: center;
} 

#siteinfo-feedback {
  text-align: center;
}

#header .search-input {
  padding: 10px 50px 0px 5px;
}

</css>
